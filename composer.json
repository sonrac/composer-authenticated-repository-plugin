{
    "name": "sonrac/composer-authenticated-repository-plugin-bkp",
    "description": "Composer plugin for authenticated repository access with GitHub tokens and HTTP basic auth",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Donii Serhii",
            "email": "doniysa@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "composer-plugin-api": "^2.0",
        "composer/composer": "^2.0",
        "sonrac/composer-authenticated-repository-plugin": "^0.2.14"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "Sonrac\\ComposerAuthenticatedRepositoryPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sonrac\\ComposerAuthenticatedRepositoryPlugin\\Tests\\": "tests/"
        }
    },
    "extra": {
        "class": "Sonrac\\ComposerAuthenticatedRepositoryPlugin\\Plugin"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "sonrac/composer-authenticated-repository-plugin": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
